<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Seguimiento de pedidos</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" type="text/css" href="~/css/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/estilosGeneral.css" />

    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="icon" type="image/png" href="/img/pantone.png">
    <link rel="stylesheet" type="text/css" href="/css/DialogoEG.css">
    <script type="text/javascript" src="/js/DialogoEG.js"></script>

    <title>Seguimiento de pedidos</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        .contenedor {
            max-height: 100%;
        }
        .main-header.navbar {
            padding-top: 1rem;
            padding-bottom: 1rem;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini text-sm sidebar-collapse">
    <div id="contenedor-loader" class="loader" style="display: none;">
        <div class="spinner"></div>
    </div>
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <div class="container-fluid d-flex align-items-center justify-content-between px-3">
                <!--IZQUIERDA-->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>
                </ul>
                <!--DERECHA-->
                <ul class="navbar-nav ml-auto d-flex align-items-center">
                    <li class="nav-item dropdown d-flex align-items-center">
                        <a class="nav-link d-flex align-items-center" id="nomUser" data-toggle="dropdown" href="#" aria-expanded="false" style="font-weight: bold;">
                            <i class="fas fa-user mr-2"></i>
                            <span>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @User.Identity.Name}
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="left: inherit; right: 0px;">
                            <a href="@Url.Action("Salir", "Login")" class="dropdown-item">
                                <i class="fas fa-sign-out-alt mr-2"></i> Cerrar Sesión
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <aside class="main-sidebar sidebar-light-primary elevation-4">
        </aside>

        <div class="content-wrapper">

            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">
                                @RenderSection("TituloPagina", required: false)
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="content" >
                <div class="container-fluid h-100">
                    @RenderBody()
                </div>
            </div>

        </div>

        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>



    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
    <script type="text/javascript" src="~/js/datatables.min.js"></script>
    <script type="text/javascript" src="~/js/toastr.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
    
    <script type="text/javascript">

        $body = $('body');
        function loading() { $body.addClass('loading'); }
        function loadingRemove() { $body.removeClass('loading'); }

        $(document).on({
            ajaxStart: function () {
                $body.addClass('loading');
            },
            ajaxStop: function () {
                $body.removeClass('loading');
            },
            ajaxError: function (xhr, status, error) {

                if (status.responseJSON.error != undefined) {
                    toastr.error(status.responseJSON.error);
                }
            }
        });

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
